{
  "name": "webpack-starter",
  "version": "1.0.0",
  "description": "webpack starter template",
  "main": "index.js",
  "scripts": {
    "dev": "npm run clean:dist && webpack-dev-server --config webpack.dev.js",
    "prod": "npm run clean:dist && npm run dist",
    "dist": "webpack --bail --progress --config webpack.prod.js",
    "clean:dist": "rimraf dist",
    "lint": "eslint src --ext .js .jsx",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Arno Schutijzer",
  "license": "ISC",
  "dependencies": {
    "react": "^16.0.0",
    "react-dom": "^16.0.0"
  },
  "devDependencies": {
    "babel-core": "^6.24.1",
    "babel-loader": "^7.1.1",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "browser-sync": "^2.18.13",
    "browser-sync-webpack-plugin": "^1.2.0",
    "css-loader": "^0.28.7",
    "eslint": "^4.8.0",
    "eslint-plugin-react": "^7.4.0",
    "html-loader": "^0.5.0",
    "html-webpack-plugin": "^2.29.0",
    "node-sass": "^4.5.3",
    "rimraf": "^2.6.2",
    "sass-loader": "^6.0.5",
    "style-loader": "^0.19.0",
    "webpack": "^3.7.1",
    "webpack-dashboard": "^0.4.0",
    "webpack-dev-server": "^2.9.1"
  },
  "engines": {
    "node": ">=6.4.0"
  }
}
