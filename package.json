{
  "name": "webpack-starter",
  "version": "1.0.0",
  "description": "webpack starter template",
  "main": "index.js",
  "scripts": {
    "dev": "npm run clean:dist && webpack-dev-server --config ./config/webpack.dev.js",
    "prod": "npm run clean:dist && npm run dist",
    "dist": "webpack --bail --progress --config ./config/webpack.prod.js",
    "clean:dist": "rimraf dist",
    "lint": "eslint src --ext .js .jsx",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Arno Schutijzer",
  "license": "ISC",
  "dependencies": {
    "react": "^16.1.0",
    "react-dom": "^16.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.32",
    "@babel/polyfill": "^7.0.0-beta.32",
    "@babel/preset-env": "^7.0.0-beta.32",
    "@babel/preset-react": "^7.0.0-beta.32",
    "babel-loader": "8.0.0-beta.0",
    "browser-sync": "^2.18.13",
    "browser-sync-webpack-plugin": "^1.2.0",
    "css-loader": "^0.28.7",
    "eslint": "^4.11.0",
    "eslint-plugin-react": "^7.4.0",
    "html-loader": "^0.5.0",
    "html-webpack-plugin": "^2.29.0",
    "node-sass": "^4.6.0",
    "rimraf": "^2.6.2",
    "sass-loader": "^6.0.5",
    "style-loader": "^0.19.0",
    "webpack": "^3.8.1",
    "webpack-dashboard": "^1.0.2",
    "webpack-dev-server": "^2.9.4"
  },
  "engines": {
    "node": ">=6.4.0"
  }
}
